<h4>Add new review</h4>
<%= form_for(@review) do |f| %>
<% if @review.errors.any? %>
  <div id="error_explanation">
    <span style="color:red"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</span>
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
<table>
	<tr><td class="tdLeft"><%= f.label :paper_title, "Paper Title*"%></td><td class="tdRight"><%= f.text_field :paper_title%></td></tr>
	<tr><td class="tdLeft"><%= f.label :author, "Author"%></td><td class="tdRight"><%= f.text_field :author%></td></tr>
	<tr><td class="tdLeft"><%= f.label :paper_source, "Paper Source"%></td><td class="tdRight"><%= f.text_field :paper_source%></td></tr>
	<tr><td class="tdLeft"><%= f.label :summary, "Summary*"%></td><td class="tdRight"><%= f.text_field :summary%></td></tr>
	<tr><td class="tdLeft"><%= f.label :key_points,	 "Key Points"%></td><td class="tdRight"><%= f.text_field :key_points%></td></tr>
	<tr><td class="tdLeft"><%= f.label :comments, "Comments/Questions"%></td><td class="tdRight"><%= f.text_field :comments%></td></tr>
	<tr><td class="tdLeft"><%= f.label :review_date, "Review Date*"%></td><td class="tdRight"><%= f.text_field :review_date%></td></tr>
	<tr><td class="tdLeft"><%= f.label :citation_info, "Citation Info"%></td><td class="tdRight"><%= f.text_field :citation_info%></td></tr>
	<tr><td class="tdLeft"><%= f.submit "Save Review" %></td><td></td></tr>	
	<tr><td><%= link_to 'Back to all reviews', reviews_path%></td></tr>
</table>
<%end%>
